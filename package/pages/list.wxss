.message .content {
    border: 20rpx solid transparent;
    border-top-width: 60rpx;
    border-left-width: 50rpx;
    white-space: pre-wrap;
    display: -webkit-box;
    font-size: 32rpx;
    line-height: 44rpx;
    max-height: 132rpx;
    color: #333;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
.message .footer {
    border-top: 1rpx solid #eee;
    color: #aaa;
    font-size: 24rpx;
    padding: 0 20rpx;
    height: 66rpx;
    line-height: 66rpx;
}
.message image {
    position: absolute;
    bottom: 10rpx;
    height: 44rpx;
    width: 44rpx;
    border-radius: 50%;
}
.message image:nth-last-child(1) {
    right: 40rpx;
    z-index: 1;
}
.message image:nth-last-child(2) {
    right: 50rpx;
    z-index: 2;
}
.message image:nth-last-child(3) {
    right: 60rpx;
    z-index:3;
}
.message + .empty {
    display: none;
}
.empty {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    font-size: 36rpx;
    color: #999;
}
.mask {
    position: fixed;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    background: rgba(0, 0, 0, .3);
    opacity: 0;
    pointer-events: none;
    transition: opacity 222ms;
    z-index: 999;
}
.mask.display {
    opacity: 1;
    pointer-events: initial;
}
.aside {
    position: fixed;
    bottom: 14%;
    z-index: 9998;
    right: 22rpx;
}
.switch {
    height: 110rpx;
    width: 110rpx;
    border-radius: 50%;
    background: #009688;
    box-shadow: 0 0 8rpx #009688;
    transition: all 222ms;
}
.open .switch {
    transform: scale(.95) rotate(135deg);
    box-shadow: none;
}
.switch::before, .switch::after {
    content: '';
    position: absolute;
    top: 50%;
    height: 4rpx;
    margin-top: -2rpx;
    left: 31%;
    right: 31%;
    background: #fff;
}
.switch::after {
    transform: rotate(90deg);
}
.select {
    position: absolute;
    bottom: 55rpx;
    right: 55rpx;
    background: #fff;
    border-radius: 10rpx;
    display: flex;
    width: 522rpx;
    padding: 40rpx;
    justify-content: center;
    text-align: center;
    transform-origin: 100% 100%;
    transform: scale(0);
    transition: all 222ms;
}
.open .select {
    transform: scale(1);
}
.li {
    width: 166rpx;
    font-size: 24rpx;
    color: #333;
}
.li::before {
    content: '';
    display: block;
    height: 100rpx;
    width: 100rpx;
    border-radius: 50%;
    margin: 0 auto 6rpx;
    background-repeat: no-repeat;
