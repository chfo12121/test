.share:before {
    content: attr(data-text);
}
.content {
    padding: 40rpx;
    background: #fff;
}
.text {
    font-size: 32rpx;
    color: #333;
    white-space: pre-wrap;
    padding-bottom: 16rpx;
    border-bottom: 1rpx solid #ccc;
}
.text:last-child {
    border: 0;
    padding: 0;
}
.content image {
    margin: 20rpx auto 0;
    display: block;
    width: 100%;
    max-width: 100%;
}


view[data-caption]{
    margin-top: 30rpx;
    background: #fff;
}
view[data-caption]:before {
    content: attr(data-caption);
    height: 50rpx;
    line-height: 50rpx;
    padding: 20rpx;
    display: block;
    font-size: 32rpx;
    border-bottom: 1rpx solid #ccc;
}

[data-caption] navigator {
    padding-left: 20rpx;
    padding-right: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    position: relative;
    display: flex;
    background: #fff !important;
}

open-data {
    font-size: 32rpx;
    display: block;
    vertical-align: top;
    color: #333;
    margin-right: 10rpx;
}

text {
    display: block;
    color: #ccc;
    font-size: 24rpx;
}

[data-caption] navigator image {
    position: absolute;
    top:50%;
    margin-top: -21rpx;
    height: 40rpx;
    width: 40rpx;
    border:1rpx solid #fff;
    border-radius: 50%;
    background: #ccc;
}
[data-caption] navigator image:nth-last-child(1) {
    right: 40rpx;
    z-index: 1;
}
[data-caption] navigator image:nth-last-child(2) {
    right: 50rpx;
    z-index: 2;
}
[data-caption] navigator image:nth-last-child(3) {
    right: 60rpx;
    z-index:3;
}

[data-caption] navigator:after {
    content: '';
    position: absolute;
    height: 21rpx;
    width: 21rpx;
    border-top: 1rpx solid #ccc;
    border-right: 1rpx solid #ccc;
    top:50%;
    margin-top: -11rpx;
    right:20rpx;
    transform: rotate(45deg);
}
