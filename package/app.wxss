.bottom-btn {
    margin-top: 100rpx;
    margin-bottom: 20%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    text-align: center;
    padding: 0 15rpx;
    border-radius: 8rpx;
    background: #00a59a;
    color: #fff;
    font-weight: bold;
    position: relative;
}
.bottom-btn.disable {
    background: #aaa;
    color: rgba(255, 255, 255, .7);
}
.button {
    position: relative;
}
button {
    opacity: 0;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}